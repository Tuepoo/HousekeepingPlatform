<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:persistentDrawingCache="animation">

    <ImageView
        android:id="@+id/image3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/guide_3" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/guide_2" />

    <ImageView
        android:id="@+id/image1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/guide_1"
        android:alpha="0.7"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <ImageView
            android:id="@+id/iv_login_logo"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/img_login"
            android:layout_marginLeft="55dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="语音家政"
            android:textSize="45sp"
            android:layout_toRightOf="@+id/iv_login_logo"
            android:layout_marginTop="70dp"
            android:gravity="center"
            />

        <RelativeLayout
            android:id="@+id/rl_login_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_login_logo"
            android:paddingLeft="25dp"
            android:paddingRight="25dp">

            <com.example.lenovo.housekeepingplatform.view.associatemail.MailBoxAssociateView
                android:id="@+id/associate_email_input"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="57dp"
                android:gravity="center"
                android:hint="@string/account"
                android:background="@drawable/bg_login"
                android:popupBackground="@drawable/bg_recommend_mail_list"
                android:singleLine="true"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_bfbfbf"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/login_input_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/associate_email_input"
                android:gravity="center"
                android:layout_marginTop="22dp"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_bfbfbf"
                android:textSize="16sp"
                android:background="@drawable/bg_login"/>
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="120dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/btn_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_register"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/btn_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_login"
            android:clickable="true"/>
    </LinearLayout>
</FrameLayout>