<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="480dp"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/price_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/service_item_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/service_item"
            android:scaleType="fitXY"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务价格"
            android:textSize="21sp"
            android:layout_toRightOf="@id/service_item_icon"
            android:layout_marginTop="20dp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/item_title"
            >


            <TextView
                android:id="@+id/item_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日常保洁"
                android:layout_marginLeft="35dp"
                android:textSize="18sp"
                />


            <TextView
                android:id="@+id/item_service_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2小时起"
                android:layout_below="@+id/item_service"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp"
                android:textSize="16sp"/>


            <TextView
                android:id="@+id/item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_red"
                android:text="35-40"
                android:layout_toLeftOf="@+id/text"
                android:layout_marginTop="15dp"
                android:textSize="16sp"/>


            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textSize="16sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price_layout"
        >

        <ImageView
            android:id="@+id/service_item_icon2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/service_item"
            android:scaleType="fitXY"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/item_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务保障"
            android:textSize="21sp"
            android:layout_toRightOf="@id/service_item_icon2"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/item_service2"
            android:layout_below="@+id/item_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="三重认证，以优选优"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/item_service2">

            <RelativeLayout
                android:id="@+id/home_layout_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/home_image_view"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/service_detil_photo1"
                    />

                <TextView
                    android:id="@+id/tx1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/home_image_view"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:text="公安局联网"
                    android:textColor="@color/color_333333"
                    android:textSize="13sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tx1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:text="备案认证"
                    android:textColor="@color/color_333333"
                    android:textSize="13sp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/pond_layout_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                >

                <TextView
                    android:id="@+id/fish_image_view"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/service_detil_photo2"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:id="@+id/tx2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fish_image_view"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:text="健康证明"
                    android:textColor="@color/color_333333"
                    android:textSize="13sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tx2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:text="严格审核"
                    android:textColor="@color/color_333333"
                    android:textSize="13sp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/message_layout_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/message_image_view"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/service_detil_photo3"
                    />

                <TextView
                    android:id="@+id/tx3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/message_image_view"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:text="工作经验"
                    android:textColor="@color/color_333333"
                    android:textSize="13sp"
                    />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tx3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:text="技能认证"
                    android:textColor="@color/color_333333"
                    android:textSize="13sp"
                    />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>